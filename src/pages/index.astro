---
import Layout from 'layouts/Layout.astro'
import Image from 'components/Image/Image.astro'

import avatar from 'assets/images/avatar.png'
import photo from 'assets/images/photo.jpg'

const title = 'Anas Alqoyyum - Software Engineer'
---

<Layout {title} overrideTitle>
	<article class="my-auto pb-8">
		<a class="inline-block text-slate-800">
			<h1 class="title relative inline-flex flex-col-reverse sm:flex-row mb-3">
				<div class="relative inline-block text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold tracking-tight">
					<span class="title-gradient">Anas Alqoyyum</span>
					<span class="title-cover absolute inset-0 transition-opacity duration-500 print:hidden" aria-hidden="true">Anas Alqoyyum</span>
				</div>
				<div class="relative flex w-16 h-16 mb-2 sm:w-24 sm:h-24 sm:ml-24 sm:-mb-8">
					<div class="avatar absolute inset-0 h-full w-full flex rounded-full overflow-hidden first:w-full first:h-width">
						<Image src={avatar} width={128} height={128} loading="lazy" alt="Anas Alqoyyum" />
					</div>
					<div class="photo h-full w-full flex rounded-full overflow-hidden first:w-full first:h-width" aria-hidden="true">
						<Image src={photo} width={128} height={128} loading="lazy" alt="Tairitsu" />
					</div>
				</div>
			</h1>
		</a>
		<p class="block text-md w-[80%] md:w-[85%] sm:text-xl font-medium sm:leading-relaxed text-slate-400">
			<span class="transition-color duration-300 hover:text-slate-600 dark:hover:text-slate-200">
				I'm a Software Engineer
			</span>
		</p>
	</article>
</Layout>
